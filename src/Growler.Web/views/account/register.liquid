{% extends "base.liquid" %}

{% block head %}
  <title> Register - Growler </title>
{% endblock %}

{% block content %}

<div class="uk-container">
  <div class="uk-flex uk-flex-center">
    <div class="uk-margin-large-top uk-card uk-card-default">
      <form class="form-register" method="POST" action="/register">
        <fieldset class ="uk-fieldset">

          <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle uk-flex-center" uk-grid>
              <div class="uk-width-auto">
                <img class="uk-border-circle" width="120"
                src="http://diylogodesigns.com/blog/wp-content/uploads/2016/01/creative-owl-bird-logo-design.png">
              </div>
              <div class="uk-width-auto">
                <h3 class="uk-card-title uk-margin-remove-bottom">Register</h3>
              </div>
            </div>
            {% if model.Error %}
              <div class="uk-alert-danger" uk-alert>
                <p>{{ model.Error.Value }}</p>
              </div>
            {% endif %}
          </div>

          <div class="uk-card-body">
            <label for="Email" class="sr-only">Email address</label>
            <div class="uk-margin">
              <div class="uk-inline">
              <input type="email" name="Email" class="uk-input uk-form-width-large" placeholder="Email address" required autofocus value={{ model.Email }}>
            </div>
          </div>

          <label for="Username" class="sr-only">Username</label>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon uk-form-icon" uk-icon="icon: user"></span>
              <input type="text" name="Username" class="uk-input
                uk-form-width-large" placeholder="Username" required value={{ model.Username }}>
            </div>
          </div>

          <label for="Password" class="sr-only">Password</label>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon uk-form-icon" uk-icon="icon: lock"></span>
              <input type="password" name="Password" class="uk-input
                uk-form-width-large" placeholder="Password" required>
            </div>
          </div>
    
          <div class = "uk-card-footer">
            <button class="uk-button uk-button-primary uk-width-1-1" type="submit">Register</button>
          </div>

        </fieldset>
  <div uk-alert class="uk-flex uk-flex-center">Already registered? <a
      href="/login"> Login</a></div>
      </form>
    </div>
  </div>
</div>

<script src='http://localhost:9000/static/js/app.bundle.js'></script>
{% endblock %}
