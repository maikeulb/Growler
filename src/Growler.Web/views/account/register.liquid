{% extends "base.liquid" %}

{% block head %}
  <title> Sign Up - Growler </title>
{% endblock %}

{% block content %}

<nav class="uk-navbar-container uk-margin" uk-navbar>
    <div class="uk-navbar-center">

        <div class="uk-navbar-center-left"><div>
            <ul class="uk-navbar-nav">
                <li><a href="#">Explore</a></li>
                <li>
                    <a href="#">Parent</a>
                    <div class="uk-navbar-dropdown">
                        <ul class="uk-nav uk-navbar-dropdown-nav">
                            <li class="uk-active"><a href="#">Active</a></li>
                            <li><a href="#">Item</a></li>
                            <li><a href="#">Item</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div></div>
        <a class="uk-navbar-item uk-logo" href="#">
          <img src="http://diylogodesigns.com/blog/wp-content/uploads/2016/01/creative-owl-bird-logo-design.png" height="45">
        </a>
        <div class="uk-navbar-center-right"><div>
            <ul class="uk-navbar-nav">
                <li><a href="#">Item</a></li>
            </ul>
        </div></div>
    </div>
  </nav>

<div class="uk-container">
  <div class="uk-flex uk-flex-center">
    <div class="uk-margin-large-top uk-card uk-card-default uk-card-body">

      <form class="form-register" method="POST" action="/register">
        <fieldset class ="uk-fieldset">

          <div class = "uk-card-header">
            <h2 class="uk-card-title">Register</h2>
            {% if model.Error %}
              <p class="alert alert-danger">
                {{ model.Error.Value }}
              </p>
            {% endif %}
          </div>

          <div class = "uk-card-body">
            <label for="Email" class="sr-only">Email address</label>
            <div class="uk-margin">
              <div class="uk-inline">
              <input type="email" name="Email" class="uk-input uk-form-width-large" placeholder="Email address" required autofocus value={{ model.Email }}>
            </div>
          </div>

          <label for="Username" class="sr-only">Username</label>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon uk-form-icon" uk-icon="icon: user"></span>
              <input type="text" name="Username" class="uk-input
                uk-form-width-large" placeholder="Username" required value={{ model.Username }}>
            </div>
          </div>

          <label for="Password" class="sr-only">Password</label>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon uk-form-icon" uk-icon="icon: lock"></span>
              <input type="password" name="Password" class="uk-input
                uk-form-width-large" placeholder="Password" required>
            </div>
          </div>
    
          <div class = "uk-card-footer">
            <button class="uk-button uk-button-primary uk-width-1-1" type="submit">Register</button>
          </div>

        </fieldset>
      </form>

    </div>
  </div>
</div>
<script src='http://localhost:9000/static/js/app.bundle.js'></script>
{% endblock %}
